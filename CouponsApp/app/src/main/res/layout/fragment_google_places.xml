<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.GooglePlacesFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/lbl_registrar_negocio" />

            <Button
                android:id="@+id/btn_buscar_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/quantum_googgreen"
                android:text="@string/btn_buscar_negocio" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_margin="20dp"
                android:background="#141414" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/lbl_datos_restaurante" />

            <EditText
                android:id="@+id/edit_nombre_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_nombre_negocio"
                android:ems="10"
                android:inputType="textPersonName"
                android:enabled="false"
                android:text="" />

            <EditText
                android:id="@+id/edit_direccion_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/hint_direcciÃ³n_negocio"
                android:inputType="textPersonName"
                android:enabled="false"
                android:text="" />

            <EditText
                android:id="@+id/edit_latitud_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_latitud"
                android:ems="10"
                android:inputType="textPersonName"
                android:enabled="false"
                android:text="" />

            <EditText
                android:id="@+id/edit_longitud_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_longitud"
                android:ems="10"
                android:inputType="textPersonName"
                android:enabled="false"
                android:text="" />

            <EditText
                android:id="@+id/edit_tell_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_telefono_negocio"
                android:ems="10"
                android:inputType="textPersonName"
                android:enabled="false"
                android:text="" />

            <EditText
                android:id="@+id/edit_id_map_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_id_map"
                android:ems="10"
                android:inputType="textPersonName"
                android:enabled="false"
                android:text="" />


            <ImageView
                android:id="@+id/imageView_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>